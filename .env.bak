# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/airbnb_bot

# Redis (optionnel)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# Playwright
PLAYWRIGHT_SESSION_PATH=./session
AIRBNB_HEADLESS=true
PLAYWRIGHT_TIMEOUT=60000

# Workers
SCRAPE_INTERVAL_SEC=45
SEND_WORKER_INTERVAL_SEC=15
MAX_RETRY_SEND=5
RETRY_DELAY_SEC=60

# Anti-ban
MIN_DELAY_MS=1000
MAX_DELAY_MS=3000
RANDOM_DELAY_ENABLED=true

# AI Integration
AI_WEBHOOK_URL=https://your-ai-api.com/respond
AI_API_KEY=your-api-key-here

# Notifications
ADMIN_WEBHOOK_URL=https://your-webhook.com/notify
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# API
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-me-in-production

